{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-sm-12">
        <h2>Mot de passe perdu</h2>
        <div id="collapseOne" class="accordion-body collapse in">
            <div class="accordion-inner">
                <div class="col-sm-4">
                    <h4>Récupération du mot de passe ?</h4>
                    <em>
                        Compléter le formulaire, votre mot de passe sera alors réinitialisé.<br /><br />
                        Une fois validé, vous devrez utiliser le nouveau mot de passe que vous avez défini.
                    </em>
                </div>
                
                <div class=" col-sm-offset-2 col-sm-4">
                    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
						{{ form_widget(form) }}
                        <br /><br /><br />
                        <div>
					        <input type="submit" class="btn btn-primary" value="{{ 'resetting.reset.submit'|trans }}" />
					    </div>
					{{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

