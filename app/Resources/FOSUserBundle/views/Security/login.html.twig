{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div class="row">
        <div class="col-xs-12 adtop70" id="content">
            <h2>Connexion</h2>
            <div id="collapseOne" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <div class="col-sm-4">
                        <h4>Pas encore inscrit ?</h4>
                        <em>
                            nous vous invitons Ã  vous inscrire<br />
                            afin de passer votre commande.
                        </em>
                        <br /><br /><br />
                        <div class="row">
                        <a href="{{path('fos_user_registration_register') }}" class="btn btn-primary col-sm-6">S'inscrire</a>
                        </div>
                    </div>
                    <div class="col-sm-1 gloup">&nbsp;</div>
                    <div class="col-sm-5">
                        <h4>Connexion</h4>
						<form action="{{ path("fos_user_security_check") }}" method="post">
						    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					    <div class="row">
						    <label for="username" class="col-sm-6">{{ 'security.login.username'|trans }}</label>
						    <input type="text" class="col-sm-6" id="username" name="_username" value="{{ last_username }}" required="required" />
						</div>
					    <div class="row">
						    <label for="password" class="col-sm-6" >{{ 'security.login.password'|trans }}</label>
						    <input type="password" class="col-sm-6" id="password" name="_password" required="required" />
						    <!--  Sera vu plus tard...
						    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
						    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
							-->
                            <input type="hidden" name="_target_path" value="{{ app.session.get("_security.main.target_path") }}">
						</div>
					    <div class="row">
						    <input type="submit" class="btn btn-primary col-sm-offset-3 col-sm-6" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
						</div>
						</form>
                    </div><br/>
                    <div class="col-sm-10">
                        <a href="{{path('fos_user_resetting_request')}}">Mot de passe perdu ?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}
