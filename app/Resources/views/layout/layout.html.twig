    <!-- script pour afficher ou non la sidebar menu -->
<script>  
$(document).ready(function () {

        var toggle=false;
    $(".toggle-sidebar").click(function () {
        toggle=!toggle;
        if(toggle)
        {   
            $("#sidebar").toggleClass("show", 1000, "swing" );
            $("#content").removeClass("col-md-12").addClass("col-md-10"); 
        } 
        else
        {          
            $("#sidebar").toggleClass("show", 1000, "swing");
            $("#content").removeClass("col-md-10").addClass("col-md-12");
        }      
        return false;
    });
});
var rate = 0;
function currentRating(rate){
        $("#stars").html(rate);
        $(".rate").val(rate);
    }
</script>

