{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Categories</h1>

    <table class="record_properties table-store">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
        </tbody>
    </table>
    <br/><br/>
    <div class="row" >
        <div class="col-sm-4">
            <a href="{{ path('adminCategories') }}">
                <button type="button" class="btn btn-info">Retour à la liste</button>           
            </a>
        </div>
        <div class="col-sm-4">        
            <a href="{{ path('adminCategories_edit', { 'id': entity.id }) }}">
                <button type="button" class="btn btn-greyish"> Modifier la catégorie </button> 
            </a>
        </div>
        <div class="col-sm-4">  
                {{ form(delete_form) }}  

        </div>
    </div>

{% endblock %}
