
{#% if addAvis == true %#}
  <div ><hr class="hrb"/>
  {{ form_start(form1, {'action':path('addAvisProduits',{'id': id}) })  }}
    <div class="row" >    
     <div class="h4 col-xs-offset-1 col-xs-3" style="color:#678">Note du produit :</div>
      <div class="h4 col-xs-offset-1 col-xs-7" style="color:#678">Votre avis sur le produit :</div>
    </div>
    <div class="row" >
                 
      <div  class="col-xs-3">
        <div class="row"  >
          <ul style="min-width:300px;" >
            <li  class="c-rating col-xs-1"  > 
              <span  onMouseOver="if(togglestars){$(this).parent().nextAll().children().removeClass('is-active');currentRating(0);}"  class="c-rating__0" ></span>
            </li>
            {% for i in 1..5 %}
              <li class="c-rating col-xs-1 " onClick="togglestars=!togglestars;" > 
                <span  id="star-{{loop.index}}" onMouseOver="showStars({{loop.index}});"  class="c-rating__item ">
                </span>
              </li>
            {% endfor %} 
            <h4 class="col-xs-3">{#{ form_widget(form.stars) }#}<span id="stars"></span>/5</h4>
          </ul>
          
        </div>
      </div>  
      <div  class="col-xs-9">
        <div class="row" ><br/>
          <div class="col-xs-10">{{ form_widget(form1.titre) }}</div>
          <div class="col-xs-1 " >{{ form_widget(form1.submit) }}</div>         
        </div>
        <div class="row"  >
          <div class="col-xs-10" >{{ form_widget(form1.comment) }} </div>
          
        </div>
      </div>
{#{ form(form1) }#}
    </div>{{ form_widget(form1._token) }}
  {{ form_end(form1) }}
</div>
{#% endif %#}

