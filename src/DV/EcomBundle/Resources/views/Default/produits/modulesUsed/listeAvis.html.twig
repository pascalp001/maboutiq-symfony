{% if nbAvis!=0 %}
<hr class="hrb"/><br/>
<div class="row" style="margin-bottom:5px; color:#456;">
  <div class="col-xs-2 bordure h4 wedge30" style="padding-bottom:2px;">L'avis de </div>
  <div class="col-xs-2 gloup-sm bordure h4 wedge30" style="padding-bottom:2px;">note </div>
  <div class="col-xs-8 gloup-sm bordure h4 wedge30" style="padding-bottom:2px;">Commentaires </div>
</div>
{% for avi in avis %}
<div class="row" style="margin-bottom:5px; color: #567;" > 
  <div class="col-sm-2 bordure h5 wedge50">{{avi.user}} 
  </div>
  <div class="col-sm-2 bordure wedge50">
    <div class="row decal-l">  
      {% for i in 1..5 %}
      <li   class="c-rating col-xs-2 "  > 
        <span   class="c-rating__mitem {% if avi.stars >= i %} is-active {% else %}{% if avi.stars >= i-0.5 %}half-rating{% endif %}{% endif %}"  ></span> 
      </li>
      {% endfor %}         
                      
      </li> 
    </div>              
  </div>
  <div class="col-sm-8 bordure h5 wedge50" >
    <div class="row" style="margin-bottom:2px;color:#456; font-weight:800;"  >{{avi.titre}}</div>
    <div class="row" style="margin-bottom:2px;color:#567; font-weight:600; font-style: italic;" > {{avi.comment}} </div>
  </div>
  
</div>
{% endfor %}

{% endif %}