{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Pages list</h1>

    <table class="table table-striped table-hover" >
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.titre }}</td>
                <td>
                        <a href="{{ path('adminPages_show', { 'id': entity.id }) }}" title="voir" ><i class="glyphicon glyphicon-eye-open"></i></a>
                        <a href="{{ path('adminPages_edit', { 'id': entity.id }) }}" title="éditer" ><i class="glyphicon glyphicon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('adminPages_new') }}">
                Créer une nouvelle page
            </a>
        </li>
    </ul>
    {% endblock %}
