{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Liste des factures de l'utilisateur</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Références</th>
                <th>Date</th>
                <th>Prix TTC</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% if utilisateur.commandes|length == 0 %}
                <tr><td><center>Aucune facture actuellement</center></td></tr>
            {% endif %}
            {% for facture in utilisateur.commandes %}
                <tr>
                    <td>ref : {{ facture.reference }}</td>
                    <td>{{ facture.date |date('d/m/Y') }}</td>
                    <td>{{ facture.commande.totalTTC }}€</td>
                    <td><a href="{{path('adminShowFacture', { 'id' : facture.id }) }}" target="_blank" ><i class="glyphicon glyphicon-refresh"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>

    </table><br/>
    <a href="{{path('adminUtilisateurs')  }}" class="btn btn-greyish pull-right" >Retour</a>
{% endblock %}