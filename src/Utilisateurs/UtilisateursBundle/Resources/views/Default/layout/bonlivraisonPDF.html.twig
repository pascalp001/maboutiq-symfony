<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Facture</title>
        <link href="./css/facture.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <img src="./img/LogoProG140px.PNG" alt="LOGO!!!" class="entete" />
        <h1 class="entete">ProG-developpement IT</h1>
        <table id="enTete">
            <tr>
                <td colspan="1"></td>
                <td colspan="1"><h1>Bon de livraison</h1></td>
                <td colspan="1"></td>
            </tr>
            <tr>
                <td width="80">Page</td>
                <td width="100">Date</td>
                <td width="120">Ref</td>
            </tr>
            <tr>
                <td class="color">[[page_nb]]</td>
                <td class="color">{{ facture.date|date('d/m/Y') }} </td>
                <td class="color">{{ facture.reference }}</td>
            </tr>
        </table>
        <div class="row">
        <div class="col-sm-3">
        <ul id="coordonnesBL">
            <li>Facturation :</li>
            <li>{{ facture.commande.facturation.nom }} {{ facture.commande.facturation.prenom }}</li>
            <li>{{ facture.commande.facturation.adresse }}</li>
            <li>{{ facture.commande.facturation.cp }} {{ facture.commande.facturation.ville }} - {{ facture.commande.facturation.pays }}</li>
        </ul>
        </div>
        <div class="col-sm-3">
        <ul id="coordonnesBL">
            <li>Livraison :</li>
            <li>{{ facture.commande.livraison.nom }} {{ facture.commande.livraison.prenom }}</li>
            <li>{{ facture.commande.livraison.adresse }}</li>
            <li>{{ facture.commande.livraison.cp }} {{ facture.commande.livraison.ville }} - {{ facture.commande.livraison.pays }}</li>
        </ul>
        </div>
        </div>
        <table id="entity">
            <tr>
                <td width="200">DÉSIGNATION</td>
                <td width="105">QUANTITÉ FACTURÉE</td>
                <td width="105">QUANTITÉ LIVRÉE</td>
            </tr>
            {% for produit in facture.commande.produit %}
                <tr>
                    <td class="color">{{ produit.reference }}</td>
                    <td class="color">{{ produit.quantite }}</td>
                    <td class="color">{{ produit.quantite }}</td>
                </tr>
            {% endfor %}
        </table>

        <span style="margin-top:50px; font-size: 20px;"> Transport effectué par {{ facture.commande.org }}</span>
        <div id="footer">

            <span class="color strong" > {{ adresse }} </span>
            <br />
            <span >{{ telephone }}</span>
        </div>
    </body>
</html>