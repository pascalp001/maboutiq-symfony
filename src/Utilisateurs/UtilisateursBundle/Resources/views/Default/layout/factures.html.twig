{% extends "::layout/layout.html.twig" %}

{% block body %}
<div class="container">
	<div class="row">
        <div class="col-md-2">
        {% include '::modulesBase/nav.html.twig' %}   
        {% include 'UtilisateursBundle:Default:modulesUsed/utilisateursConnected.html.twig' %} 
        {% render(controller('EcomBundle:Panier:menu')) %}
        </div> 
		<div class="col-md-9">
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}  
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-warning">
                    {{ flashMessage }}
                </div>
            {% endfor %}  
            <h2>Factures</h2>
            <form>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Références</th>
                            <th>Date</th>
                            <th>Prix TTC</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if factures|length == 0 %}
                            <tr><td><center>Aucune facture actuellement</center></td>
                            </tr>
                        {% endif %}
                        {% for facture in factures %}
                        <tr>
                            <td>ref : {{ facture.reference }}</td>
                            <td>{{ facture.date |date('d/m/Y') }}</td>
                            <td>{{ facture.commande.totalTTC }}€</td>
                            <td><a href="{{path('facturePDF', { 'id' : facture.id }) }}" target="_blank" ><i class="glyphicon glyphicon-refresh"></i></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </form>

        </div>
	
	</div>
</div>
{% endblock %}